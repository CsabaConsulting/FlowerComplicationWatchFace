<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/watch_face_background"
        android:layout_width="@dimen/settings_preview_size"
        android:layout_height="@dimen/settings_preview_size"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/settings_watch_face_preview_background"/>


    <ImageView
        android:id="@+id/top_left_complication_background"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/added_small_round_complication"
        style="?android:borderlessButtonStyle"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/watch_face_background"
        android:layout_alignStart="@+id/watch_face_background"
        android:layout_marginStart="42dp"
        android:layout_marginTop="4dp" />

    <ImageButton
        android:id="@+id/top_left_complication"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        style="?android:borderlessButtonStyle"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/top_left_complication_background"
        android:layout_alignStart="@+id/top_left_complication_background" />

    <ImageView
        android:id="@+id/top_right_complication_background"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/added_small_round_complication"
        style="?android:borderlessButtonStyle"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/top_right_complication"
        android:layout_alignStart="@+id/top_right_complication" />

    <ImageButton
        android:id="@+id/top_right_complication"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        style="?android:borderlessButtonStyle"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/top_left_complication_background"
        android:layout_alignStart="@+id/top_left_complication_background"
        android:layout_marginStart="48dp" />

    <ImageView
        android:id="@+id/top_long_complication_background"
        style="?android:borderlessButtonStyle"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/top_left_complication_background"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:background="@android:color/transparent"
        android:src="@drawable/added_long_round_complication" />

    <ImageButton
        android:id="@+id/top_long_complication"
        style="?android:borderlessButtonStyle"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/top_long_complication_background"
        android:layout_alignTop="@+id/top_long_complication_background"
        android:background="@android:color/transparent" />

    <ImageView
        android:id="@+id/bottom_long_complication_background"
        style="?android:borderlessButtonStyle"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/top_long_complication_background"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@android:color/transparent"
        android:src="@drawable/added_long_round_complication" />

    <ImageButton
        android:id="@+id/bottom_long_complication"
        style="?android:borderlessButtonStyle"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_alignStart="@+id/bottom_long_complication_background"
        android:layout_alignTop="@+id/bottom_long_complication_background" />

    <ImageView
        android:id="@+id/bottom_left_complication_background"
        style="?android:borderlessButtonStyle"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignTop="@+id/bottom_long_complication_background"
        android:layout_alignStart="@+id/watch_face_background"
        android:background="@android:color/transparent"
        android:src="@drawable/added_small_round_complication"
        android:layout_marginStart="42dp"
        android:layout_marginTop="38dp" />

    <ImageButton
        android:id="@+id/bottom_left_complication"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        style="?android:borderlessButtonStyle"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/bottom_left_complication_background"
        android:layout_alignStart="@+id/bottom_left_complication_background" />

    <ImageView
        android:id="@+id/bottom_right_complication_background"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/added_small_round_complication"
        style="?android:borderlessButtonStyle"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/bottom_left_complication_background"
        android:layout_alignStart="@+id/bottom_right_complication" />

    <ImageButton
        android:id="@+id/bottom_right_complication"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        style="?android:borderlessButtonStyle"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/bottom_right_complication_background"
        android:layout_alignStart="@+id/bottom_left_complication_background"
        android:layout_marginStart="48dp" />

</RelativeLayout>
